@using VocaDb.Web.Helpers;
@using VocaDb.Web.Models.Album;
@model VocaDb.Model.DataContracts.Albums.ArchivedAlbumVersionDetailsContract

@{
	
    ViewBag.Title = "Revision " + Model.Version + " for " + Model.Name;
	
	if (Model.Album != null) {
		ViewBag.Parents = new[] { 
			Html.ActionLink("Albums", "Index"), 
			Html.ActionLink(Model.Album.Name, "Details", new { id = Model.Album.Id }),
			Html.ActionLink("Revisions", "Versions", new { id = Model.Album.Id }) 
		};
	} else {
		ViewBag.Parents = new[] { 
			Html.ActionLink("Albums", "Index")
		};
	}

}

@section Toolbar {
@if (Login.CanRevertEntryVersions) {
	@Html.ActionLink("Revert to this version", "RevertToVersion", new { archivedAlbumVersionId = Model.Id }, new { id = "revertLink", onclick = "return confirm(\"Are you sure you want to revert to this version?\");" })
}
}

@Helpers.ArchivedObjectVersionProperties(Versions.CreateForAlbum(Model))

@AlbumHelpers.PrintArchivedAlbumData(Model.Id, Model.Data)