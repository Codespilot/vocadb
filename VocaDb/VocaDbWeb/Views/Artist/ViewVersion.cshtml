@using VocaDb.Web.Helpers;
@using VocaDb.Web.Models.Artist;
@model VocaDb.Model.DataContracts.Artists.ArchivedArtistVersionDetailsContract

@{
	
    ViewBag.Title = "Revision " + Model.Version + " for " + Model.Name;
	ViewBag.Parents = new[] { 
		Html.ActionLink("Artist", "Index"), 
		Html.ActionLink(Model.Artist.Name, "Details", new { id = Model.Artist.Id }),
		Html.ActionLink("Revisions", "Versions", new { id = Model.Artist.Id }) 
	};

}

@section Toolbar {
@if (Login.CanRevertEntryVersions) {
	@Html.ActionLink("Revert to this version", "RevertToVersion", new { archivedArtistVersionId = Model.Id }, new { id = "revertLink" })
}
}

@Helpers.ArchivedObjectVersionProperties(Versions.CreateForArtist(Model))

@ArtistHelpers.PrintArchivedArtistData(Model.Id, Model.Data)