@using VocaDb.Web.Helpers;
@model VocaDb.Model.DataContracts.ReleaseEvents.ReleaseEventFindResultContract

@{
    ViewBag.Title = "Find event - " + Model.EventName;
}

@Helpers.NotificationPanel("Sorry, an event with this name could not be found. It probably hasn't been added to the database yet.");

@if (Login.CanManageDb) {

	<p>You may add the event to the database.</p>
	
	using (Html.BeginForm()) {
	
		if (Model.Series != null) {

			@Html.HiddenFor(m => m.Series.Id)
			
			<input type="radio" name="EventTarget" value="Series" checked="checked" />
	 
			<text>Series:</text>
			@Html.ActionLink(Model.Series.Name, "SeriesDetails", new { id = Model.Series.Id })
			<text>, number</text>	 
			@Html.TextBoxFor(m => m.SeriesNumber)
	 
		} else {

			<input type="radio" name="EventTarget" value="Ungrouped" checked="checked" />
		
			<text>Name:</text>
			@Html.TextBoxFor(m => m.EventName)
		
		}
	
		<input type="submit" value="Create event" />
	
	}
	
}