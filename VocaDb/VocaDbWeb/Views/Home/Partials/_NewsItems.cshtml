
<!-- Binding context: NewsListViewModel -->

<h4 class="withMargin">@ViewRes.Home.IndexStrings.News</h4>

<div data-bind="visible: loaded, foreach: posts" style="display: none;">
	<div class="message newsEntry ui-tabs ui-widget ui-widget-content ui-corner-all">
		<div class="messageTitle ui-widget-header ui-corner-all">
			<div class="messageTitleText">
				<a data-bind="attr: { href: URL }" href="#">
					<h4 data-bind="html: title"></h4>		
				</a>
				<img data-bind="attr: { src: author.avatar_URL }" src="@Url.Content("~/Content/Unknown.png")" width="15" height="15" alt="Avatar" />
				<span data-bind="text: author.name"></span>
				<span> @HelperRes.ActivityFeedHelperStrings.At </span>
				<span data-bind="text: date"></span>
			</div>	
		</div>	
		<p class="messageContent">
			<span data-bind="html: content"></span>
		</p>
	</div>
</div>
<div data-bind="visible: !loaded()">
	<img src="@Url.Content("~/Content/ajax-loader.gif")"/>
	@ViewRes.SharedStrings.Loading
</div>