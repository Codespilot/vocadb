
<h3 data-bind="visible: isUniversalSearch">Songs</h3>

<div data-bind="visible: showSongSearch, with: songSearchViewModel">

	<div data-bind="with: paging">
		@KnockoutHelpers.ServerSidePaging()
	</div>

	<div class="pull-right">
		Total entries:
		<span data-bind="text: paging.totalItems"></span>
	</div>

	<table class="table table-striped">
		<thead>
			<tr>
				<th colspan="2">
					<a data-bind="click: function() { sort('Name') }" href="#">
						Name
						<span class="sortDirection_down" data-bind="visible: sort() == 'Name'"></span>
					</a>
				</th>
				<th>
					<a data-bind="click: function() { sort('RatingScore') }" href="#">
						Rating
						<span class="sortDirection_down" data-bind="visible: sort() == 'RatingScore'"></span>
					</a>
				</th>
			</tr>
		</thead>
		<tbody data-bind="foreach: page">
			<tr>
				<td>
					<a data-bind="visible: $data.thumbUrl, attr: { href: vdb.utils.EntryUrlMapper.details('Song', id), title: additionalNames }" href="#">
						<img data-bind="attr: { src: $data.thumbUrl }" title="Cover picture" class="coverPicThumb" />
					</a>
				</td>
				<td>
					<a data-bind="text: localizedName, attr: { href: vdb.utils.EntryUrlMapper.details('Song', id), title: additionalNames }" href="#"></a><br />
					<small class="extraInfo" data-bind="text: artistString"></small>
				</td>
				<td>
					<span data-bind="text: ratingScore"></span>
					total score
				</td>
			</tr>
		</tbody>
	</table>

	<div data-bind="with: paging">
		@KnockoutHelpers.ServerSidePaging()
	</div>

</div>

