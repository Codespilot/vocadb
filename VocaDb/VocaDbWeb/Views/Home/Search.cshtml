@model VocaDb.Web.Models.Home.SearchEntries

@{
    ViewBag.Title = "Search";
}

@using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "form-inline" })) {
	
	<p>
		@ViewRes.SharedStrings.Filter: @Html.TextBoxFor(m => m.Filter, new { size = 30 }) 
		&nbsp;
		<button type="submit" class="btn">@ViewRes.SharedStrings.Apply</button>
	</p>

}

@if (Model.Artists.Any()) {

	<h3>
		@Html.ActionLink(ViewRes.SharedStrings.Artists, "Index", "Artist", new { filter = Model.Filter }, null)
	</h3>
	
	@ArtistHelpers.Artists(Model.Artists)
	
}

@if (Model.Albums.Any()) {

	<br />
	<h3>
		@Html.ActionLink(ViewRes.SharedStrings.Albums, "Index", "Album", new { filter = Model.Filter }, null)
	</h3>
	
	@AlbumHelpers.AlbumList(Model.Albums, false, true)
	
}

@if (Model.Songs.Any()) {

	<br />
	<h3>
		@Html.ActionLink(ViewRes.SharedStrings.Songs, "Index", "Song", new { filter = Model.Filter }, null)
	</h3>
	
	@SongHelpers.Songs(Model.Songs)
	
}