@model VocaDb.Model.DataContracts.MikuDb.InspectedAlbum

@{
    ViewBag.Title = "Processing albums";
	ViewBag.Parents = new[] { 
		Html.ActionLink("Imported albums", "Index"), 
	};  	
}

@using (Html.BeginForm("AcceptImported", "MikuDbAlbum")) {

	Html.RenderPartial("InspectedAlbumRow", Model);

    <button type="submit" class="btn btn-primary" name="commit" value="Accept">Approve</button>
	<a class="btn btn-nomargin" href="@Url.Action("SkipAlbum", new { id = Model.ImportedAlbum.Id })">
		<i class="icon-remove"></i>
		Reject
	</a>
	
}

@section BodyScripts {
<link rel="stylesheet" href="@Url.Content("~/Scripts/jqwidgets/styles/jqx.base.css")" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Scripts/jqwidgets/jqxcore.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jqwidgets/jqxbuttons.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jqwidgets/jqxscrollbar.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jqwidgets/jqxlistbox.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Shared/EntrySearchJqx.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/MikuDbAlbums/PrepareForImport.js")"></script>
<script type="text/javascript">

	$(document).ready(function() { 
		initPage();
	});

</script>
}