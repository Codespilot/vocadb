@using VocaDb.Web.Helpers
@model VocaDb.Web.Models.LocalizedStringEdit

<tr>
	<td>
		@{ var item = Html.BeginCollectionItem("Names"); }
		@Html.HiddenFor(m => m.Id)
		@Html.TextBoxFor(m => m.Value, new { maxlength = 128, size = 50, @class = "nameEdit" })<br />
		@Html.ValidationMessageFor(m => m.Value)
	</td>
	<td>
		@Html.LanguageSelectionDropDownListFor(m => m.Language, new { @class = "nameLanguage" }, true, Model.Language)
		@{ item.Dispose(); }
	</td>
	<td>
		<a href="#" class="nameDelete textLink deleteLink">Delete</a>
	</td>
</tr>
