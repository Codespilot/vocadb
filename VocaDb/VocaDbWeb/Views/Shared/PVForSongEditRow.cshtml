@model VocaDb.Model.DataContracts.PVs.PVContract
@using VocaDb.Web.Helpers;

<tr>
	<td>
		@{ var item = Html.BeginCollectionItem("PVs"); }
        @Html.HiddenFor(m => m.Author)
		@Html.HiddenFor(m => m.Id)
		@Html.HiddenFor(m => m.PVId)
		@Html.HiddenFor(m => m.PVType)
		@Html.HiddenFor(m => m.Service)  
        @Html.HiddenFor(m => m.ThumbUrl)
		@Html.HiddenFor(m => m.Url)
		<a href="@Model.Url">@Model.Service</a>
	</td>
	<td>
		@Model.PVType
	</td>
	<td>
		@Html.TextBoxFor(m => m.Name, new { size = 40, @class = "input-xlarge" })
		@{ item.Dispose(); }
	</td>
    <td>
	    @if (!string.IsNullOrEmpty(Model.Author) && Login.Manager.HasPermission(VocaDb.Model.Domain.Security.PermissionToken.BulkDeletePVs)) {
			@Html.ActionLink(Model.Author, "PVsByAuthor", "Admin", new { author = Model.Author }, null)		 
		} else {
			@Model.Author
		}
	</td>
	<td>
		<a href="#" class="pvRemove textLink deleteLink">@ViewRes.SharedStrings.Delete</a>
	</td>
</tr>
