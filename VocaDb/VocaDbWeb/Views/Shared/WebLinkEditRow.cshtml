@using VocaDb.Web.Helpers
@model VocaDb.Web.Models.Shared.WebLinkDisplay
		   
<tr>
	<td>
		@{ var item = Html.BeginCollectionItem("WebLinks"); }
		@Html.HiddenFor(m => m.Id)
		@Html.TextBoxFor(m => m.Description, new { maxlength = 512, @class = "webLinkDescription" })
	</td>
	<td>
		@Html.TextBoxFor(m => m.Url, new { maxlength = 512, size = 50, @class = "webLinkUrl" })
		@{ item.Dispose(); }
	</td>
	<td>
		<a href="#" class="webLinkDelete textLink deleteLink">Delete</a>
	</td>
</tr>
