@using VocaDb.Web.Helpers;
@using VocaDb.Web.Models.Song;
@model VocaDb.Model.DataContracts.Songs.ArchivedSongVersionDetailsContract

@{
	
    ViewBag.Title = "Revision " + Model.Version + " for " + Model.Name;
	
	if (Model.Song != null) {
		ViewBag.Parents = new[] { 
			Html.ActionLink("Song", "Index"), 
			Html.ActionLink(Model.Song.Name, "Details", new { id = Model.Song.Id }),
			Html.ActionLink("Revisions", "Versions", new { id = Model.Song.Id }) 
		};
	} else {
		ViewBag.Parents = new[] { 
			Html.ActionLink("Song", "Index")
		};
	}

}

@section Toolbar {
@if (Login.CanRevertEntryVersions) {
	@Html.ActionLink("Revert to this version", "RevertToVersion", new { archivedSongVersionId = Model.Id }, new { id = "revertLink", onclick = "return confirm(\"Are you sure you want to revert to this version?\");" })
}
}

@Helpers.ArchivedObjectVersionProperties(Versions.CreateForSong(Model))

@SongHelpers.PrintArchivedSongData(Model.Data)

<script type="text/javascript">

	$(document).ready(function () {
		$("#revertLink").button({ icons: { primary: 'ui-icon-arrowrefresh-1-w'} });
	});

</script>