@using VocaDb.Model.Utils
@using Microsoft.Web.Helpers;
@model VocaDb.Web.Models.User.ForgotPassword
@{
	ViewBag.Title = "Request password reset";
}

@Helpers.ValidationSymmaryPanel("Unable to process request")

@using (Html.BeginForm()) {
	
	<div class="editor-label">
		@Html.LabelFor(m => m.Username)
	</div>
	<div class="editor-field">
		@Html.TextBoxFor(m => m.Username)<br />
		@Html.ValidationMessageFor(m => m.Username)
	</div>
	
	<div class="editor-label">
		@Html.LabelFor(m => m.Email)
	</div>
	<div class="editor-field">
		@Html.TextBoxFor(m => m.Email)<br />
		@Html.ValidationMessageFor(m => m.Email)
	</div>

	<div class="editor-label">
		CAPTCHA
	</div>
	<div class="editor-field">
		@ReCaptcha.GetHtml(publicKey: AppConfig.ReCAPTCHAPublicKey)

		@Html.ValidationMessage("CAPTCHA")
	</div>
		
	<br />
	<p>
		<button type="submit" class="btn btn-primary">Send request</button>
	</p>

}