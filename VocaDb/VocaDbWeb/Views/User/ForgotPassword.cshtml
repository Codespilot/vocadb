@using VocaDb.Model.Utils
@using Microsoft.Web.Helpers;
@using Res = ViewRes.User.ForgotPasswordStrings;
@model VocaDb.Web.Models.User.ForgotPassword
@{
	ViewBag.Title = Res.RequestPasswordReset;
}

@Helpers.ValidationSymmaryPanel(Res.UnableToProcessRequest)

@using (Html.BeginForm()) {
	
	<div class="editor-label">
		<label>@ViewRes.SharedStrings.Username</label>
	</div>
	<div class="editor-field">
		@Html.TextBoxFor(m => m.Username)<br />
		@Html.ValidationMessageFor(m => m.Username)
	</div>
	
	<div class="editor-label">
		<label>@ViewRes.SharedStrings.EmailAddress</label>
	</div>
	<div class="editor-field">
		@Html.TextBoxFor(m => m.Email)<br />
		@Html.ValidationMessageFor(m => m.Email)
	</div>

	<div class="editor-label">
		CAPTCHA
	</div>
	<div class="editor-field">
		@ReCaptcha.GetHtml(publicKey: AppConfig.ReCAPTCHAPublicKey)

		@Html.ValidationMessage("CAPTCHA")
	</div>
		
	<br />
	<p>
		<button type="submit" class="btn btn-primary">@Res.SendRequest</button>
	</p>

}