@model VocaDb.Model.DataContracts.Users.UserWithMessagesContract

@{
    ViewBag.Title = "Messages";
	ViewBag.Parents = new[] { 
		Html.ActionLink(Model.Name, "Details", new { id = Model.Id }) 
	};		
}

