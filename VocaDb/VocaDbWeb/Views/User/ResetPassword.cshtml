@model VocaDb.Web.Models.User.ResetPassword
@{
	ViewBag.Title = "Reset password";
}

@Helpers.ValidationSymmaryPanel("Unable to process request")

@using (Html.BeginForm()) {
	
	@Html.HiddenFor(m => m.RequestId)
	
	<fieldset>
		<div class="editor-label">
			@Html.LabelFor(m => m.NewPass)
		</div>
		<div class="editor-field">
			@Html.PasswordFor(m => m.NewPass)<br />
			@Html.ValidationMessageFor(m => m.NewPass)
		</div>

		<div class="editor-label">
			@Html.LabelFor(m => m.NewPassAgain)
		</div>
		<div class="editor-field">
			@Html.PasswordFor(m => m.NewPassAgain)<br />
 			@Html.ValidationMessageFor(m => m.NewPassAgain)
		</div>

		<p>
			<input type="submit" value="Send" />
		</p>
	</fieldset>
	
}
