@using VocaDb.Web.Helpers;
@model VocaDb.Model.DataContracts.Activityfeed.NewsEntryContract[]

@{
    ViewBag.Title = "News entries";
}

@foreach (var entry in Model) {
	@ActivityfeedHelpers.NewsEntry(entry);
}

@if (Login.CanEditNews) {
	@Html.ActionLink("Create new entry", "Edit", "NewsEntry", null, new { @class = "textLink addLink" })
}